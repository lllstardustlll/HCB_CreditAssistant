<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/overflowCardView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Специальное предложение"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/overflowCardView"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />

            <ImageView
                android:id="@+id/picCardView"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_below="@id/titleCardView"
                android:scaleType="centerCrop"
                android:src="@mipmap/offer_pic" />

            <TextView
                android:id="@+id/learnMoreCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/picCardView"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="УЗНАТЬ БОЛЬШЕ >"
                android:textColor="@android:color/black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>