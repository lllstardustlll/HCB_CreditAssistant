    android:background="@drawable/layout_gradient_red">

    <ProgressBar
        android:id="@+id/loansProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <TextView
        android:id="@+id/loans_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_corners"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/loansTitle"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:id="@+id/loans_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loans_title"
        android:background="@color/colorAccent"
        android:paddingTop="8dp" />

